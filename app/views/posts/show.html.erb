
<div class="panel panel-default panel_cus ">
  <div class="title">
  <h3> <%= @post.title %></h3>
   
    </div>
    <hr>
    <div class="panel-body ">
       <h4>by  <%= @post.author %>
</h4>
    <%= @post.created_at.strftime("%Y-%m-%d") %>
      <p class="content">
      <%= @post.content %>
      </p>
  </div>
</div>
<%= link_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
      <%= link_to 'Revise', edit_post_path(@post), class: 'btn btn-sm btn-success' %> 
